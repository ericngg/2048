            android:text=""
            android:textColor="@color/sandstone"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/da"
            app:layout_constraintEnd_toStartOf="@+id/cb"
            app:layout_constraintHorizontal_bias="0.5"
